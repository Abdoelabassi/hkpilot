#!/usr/bin/env bash

export HK_PILOT_DIR=@HK_PILOT_DIR@
export HK_WORK_DIR=@HK_PILOT_DIR@/..

export HK_PILOT_GCC_VERSION=@GCC_VERSION@
export HK_PILOT_OS=@OS@
export HK_PILOT_ARCH=@ARCH@
export HK_PILOT_PYTHON_VERSION=@PYTHON_VERSION@
export HK_SYSTEM=@HK_SYSTEM@

export HK_PILOT_BUILD_PATTERN=build-${HK_PILOT_OS}_${HK_PILOT_ARCH}-gcc_${HK_PILOT_GCC_VERSION}
export HK_PILOT_INSTALL_PATTERN=install-${HK_PILOT_OS}_${HK_PILOT_ARCH}-gcc_${HK_PILOT_GCC_VERSION}

export PATH=$HK_PILOT_DIR/install/bin:$PATH
export PYTHONPATH=$HK_PILOT_DIR/install/bin:$HK_PILOT_DIR/install/lib/python@PYTHON_MAINVERSION@/site-packages:$PYTHONPATH
